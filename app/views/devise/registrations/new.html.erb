<%= form_for(resource, as: resource_name, url: registration_path(resource_name),
:html => { :class => "flex flex-col pt-4"}) do |f| %>

  <%= render "devise/shared/error_messages", resource: resource %>
  
  <div class="border-third border-t border-b border-opacity-20 mb-4">
    <div class="field">
      <%= f.label :first_name, class: 'sr-only invisible' %>
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first name",
        placeholder: 'First name',
        class: 'w-full border-none py-4' %>
    </div>

    <div class="mx-auto w-11/12 border-t border-third border-opacity-20"></div>

    <div class="field">
      <%= f.label :last_name, class: 'sr-only invisible' %>
      <%= f.text_field :last_name, autofocus: true, autocomplete: "last name",
        placeholder: 'Last name',
        class: 'w-full border-none py-4' %>
    </div>

    <div class="mx-auto w-11/12 border-t border-third border-opacity-20"></div>

    <div class="field">
      <%= f.label :email, class: 'sr-only invisible' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",
        placeholder: 'Email',
        class: 'w-full border-none py-4' %>
    </div>

    <div class="mx-auto w-11/12 border-t border-third border-opacity-20"></div>

    <div class="field">
      <%= f.label :password, class: 'sr-only invisible' %>
      <% if @minimum_password_length %>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password",
        placeholder: 'New password',
        class: 'w-full border-none py-4' %>
    </div>

    <div class="mx-auto w-11/12 border-t border-third border-opacity-20"></div>

    <div class="field">
      <%= f.label :password_confirmation, class: 'sr-only invisible' %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password",
        placeholder: 'Confirm password',
        class: 'w-full border-none py-4' %>
    </div>
  </div>

  <%= f.submit "Sign up",
    class: 'mx-auto w-5/6 bg-main text-center text-sm text-white p-4 uppercase rounded' %>
<% end %>

<%= render "devise/shared/links" %>
