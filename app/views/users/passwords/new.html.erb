<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post },
:html => { :class => "flex flex-col pt-4"}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="border-third border-t border-b border-opacity-20 mb-4">
    <div class="field">
      <%= f.label :email, class: 'sr-only invisible' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",
      placeholder: 'Email',
      class: 'w-full border-none py-4' %>
    </div>
  </div>

  <%= f.submit "Send me reset password instructions",
  class: 'mx-auto max-w-5/6 bg-main text-center text-sm text-white p-4 uppercase rounded' %>

<% end %>

<%= render "devise/shared/links" %>
